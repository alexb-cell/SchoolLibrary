<Window x:Class="AdminApp.AppWindows.NewBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp.AppWindows"
        mc:Ignorable="d"
        Title="NewBook" Height="501" Width="800">
    <Window.Resources>
        <FontFamily x:Key="SpecialElite">/Fonts/#Special Elite</FontFamily>
        <Style TargetType="{x:Type Button}" x:Key="ImageButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Canvas Margin="0,0,0,0">
        <TextBox x:Name="textBoxNickName"
                 Canvas.Left="250"
                 TextWrapping="Wrap"
                 Text="" 
                 Canvas.Top="103"
                 Width="262"
                 FontSize="20"
                 Padding="20,7,7,7" HorizontalAlignment="Left" VerticalAlignment="Center" 
                 
                 />
        <Label x:Name="label"
               Content="Book name"
               Canvas.Left="88"
               Canvas.Top="103"
               FontSize="20"
               FontFamily="{StaticResource SpecialElite}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="textBoxPassword"
                 Canvas.Left="250"
                 TextWrapping="Wrap"
                 Text=""
                 Canvas.Top="170"
                 Width="262"
                 FontSize="20"
                 Padding="20,7,7,7" HorizontalAlignment="Center" VerticalAlignment="Top" Height="91" />
        <Label x:Name="label_Copy"
               Content="Book Description"
               Canvas.Left="47" 
               Canvas.Top="172" 
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               FontSize="20"
               FontFamily="{StaticResource SpecialElite}"/>
        <Button x:Name="buttonLoin"
                Canvas.Left="248" 
                Canvas.Top="409" 
                Width="254" 
                Height="47"
                FontSize="20"
                FontFamily="{StaticResource SpecialElite}"
                Foreground="White"
                Background="Navy" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Width="32" Source="/Images/logout2.png"></Image>
                    <Label Foreground="White"
                           Padding="15,7,0,0"
                           Content="Login"
                           FontSize="20"></Label>
                </StackPanel>
            </Button.Content>
        </Button>
        <Button x:Name="buttonClose"
        Canvas.Left="536" 
        Canvas.Top="407" 
        Width="254" 
        Height="47"
        FontSize="20"
        FontFamily="{StaticResource SpecialElite}"
        Foreground="White"
        Background="Navy" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Width="32" Source="/Images/logout2.png"></Image>
                    <Label Foreground="White"
                   Padding="15,7,0,0"
                   Content="Login"
                   FontSize="20"></Label>
                </StackPanel>
            </Button.Content>
        </Button>
        <Label x:Name="label1"
               Content="New Book" 
               Canvas.Left="243" 
               Canvas.Top="16"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Width="273"
               FontSize="40"
               FontFamily="{StaticResource  SpecialElite}"/>
        <Grid Background="Navy" 
              HorizontalAlignment="Left"
              Canvas.Left="211"
              VerticalAlignment="Center" 
              Canvas.Top="103"
              Height="43"
              Width="43">
            <Image Source="/Images/usernick.png" Stretch="Uniform"/>

            <Rectangle
   
    
    
   
     />
        </Grid>
        <Grid Background="Navy" 
         HorizontalAlignment="Left"
         Canvas.Left="211"
         VerticalAlignment="Center" 
         Canvas.Top="169"
         Height="43"
         Width="43">
            <!-- The Image control goes first (background layer) -->
            <Image Source="/Images/password.png" Stretch="Uniform"/>

            <Rectangle
   
    
    
   
/>
        </Grid>
        <Image x:Name="image" Height="156" Canvas.Left="588" Canvas.Top="44" Width="168" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Button" Canvas.Left="648" Canvas.Top="257"/>
        <ListBox x:Name="listBox" Height="121" Width="156" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="178" Canvas.Top="288" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ListBox x:Name="listBox_Copy" Height="121" Width="156" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="356" Canvas.Top="285" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Canvas>
</Window>
