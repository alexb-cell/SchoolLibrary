<Window x:Class="AdminApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="600"
        Width="1000"
        ResizeMode="NoResize">
    <Window.Resources>
        <FontFamily x:Key="MainFont">/Font/#Special Elite</FontFamily>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="30"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="Padding" Value="10"></Setter>
            <Setter Property="Foreground" Value="Red"></Setter>
            <Setter Property="FontFamily" Value="{StaticResource MainFont}"></Setter>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <Border Background="#000000">
            <StackPanel Orientation="Vertical" Margin="20" >
                <Image Source="/Images/logo.png" Margin="0,0,0,10"></Image>

                <Border BorderThickness="2"  BorderBrush="White" Margin="0,10,0,1"></Border>
                <Border BorderThickness="2"  BorderBrush="White" Margin="0,3,0,20"></Border>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/home.png"
                           Width="32"></Image>
                    <TextBlock Padding="10">
         <Hyperlink Foreground="White"
                    x:Name="hyperlinkStartPage"
                    Click="hyperlinkStartPage_Click"
                    FontFamily="{StaticResource MainFont}"
                    TextDecorations="None"
                    FontSize="25">Home</Hyperlink>
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/books.png"
                           Width="32"></Image>
                    <TextBlock Padding="10">
                       <Hyperlink x:Name="hyperlinkBooks"
                                  Foreground="White"
                                  FontFamily="{StaticResource MainFont}"
                                  TextDecorations="None"
                                  FontSize="25" Click="hyperlinkBooks_Click">Books</Hyperlink>
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/author.png" Width="32"></Image>
                    <TextBlock Padding="10">
        <Hyperlink x:Name="hyperlinkAuthors" Foreground="White"
                   FontFamily="{StaticResource MainFont}"
                   TextDecorations="None"
                   FontSize="25"
                   Click="hyperlinkAuthors_Click">Authors</Hyperlink>
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/ganres.png" Width="32"></Image>
                    <TextBlock Padding="10">
        <Hyperlink x:Name="hyperLinkGanres" Foreground="White"
                   FontFamily="{StaticResource MainFont}"
                   TextDecorations="None"
                   FontSize="25"
                   Click="hyperLinkGanres_Click">Ganres</Hyperlink>
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/readers.png" Width="32"></Image>
                    <TextBlock Padding="10">
        <Hyperlink x:Name="hyperlinkReaders" Foreground="White"
                   FontFamily="{StaticResource MainFont}"
                   TextDecorations="None"
                   FontSize="25"
                   Click="hyperlinkReaders_Click">Readers</Hyperlink>
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/borrow.png" Width="32"></Image>
                    <TextBlock Padding="10">
        <Hyperlink x:Name="hyperlinkBorrows" Foreground="White"
                   FontFamily="{StaticResource MainFont}"
                   TextDecorations="None"
                   FontSize="25"
                   Click="hyperlinkBorrows_Click">Borrows</Hyperlink>
                    </TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/Logout.png" Width="32"></Image>
                    <TextBlock Padding="10">
    <Hyperlink Foreground="White" x:Name="hyperlinkLogin"
           
               FontFamily="{StaticResource MainFont}"
               TextDecorations="None"
               FontSize="25"
               Click="hyperlinkLogin_Click">Login</Hyperlink>
                    </TextBlock>
                </StackPanel>
                <Border BorderThickness="2"  BorderBrush="White" Margin="0,20,0,1"></Border>
                <Border BorderThickness="2"  BorderBrush="White" Margin="0,3,0,20"></Border>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/Logout2.png" Width="32"></Image>
                    <TextBlock Padding="10">
                         <Hyperlink x:Name="hyperlinkExit" Foreground="Red"
                                   FontFamily="{StaticResource MainFont}"
                                   TextDecorations="None"
                                   FontSize="25"
                                    Click="hyperlinkExit_Click">Exit</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
        <Frame x:Name="frameMain" 
               Grid.Column="1" 
               Grid.Row="0"
               NavigationUIVisibility="Hidden">

        </Frame>
    </Grid>
</Window>
