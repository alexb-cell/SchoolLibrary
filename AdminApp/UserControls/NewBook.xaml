<Window x:Class="AdminApp.NewBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp"
        mc:Ignorable="d"
        Title="NewBook" Height="414" Width="615">
    <Canvas>
        <Label x:Name="label"
               Content="Book Name" 
               Canvas.Left="231"
               Canvas.Top="25" RenderTransformOrigin="2.485,0.189"/>
        <Label x:Name="label1"
               Content="BookDescription"
               Canvas.Left="234"
               Canvas.Top="93" 
               Width="100" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="BookImage" Canvas.Left="45" Canvas.Top="28"/>
        <Border Canvas.Left="48" Canvas.Top="52"
                BorderThickness="1" BorderBrush="Black">
            <Image x:Name="image" Height="153"  Width="145"/>
        </Border>
        <Button x:Name="button" Content="Select book image" Canvas.Left="51" Canvas.Top="220" HorizontalAlignment="Left" VerticalAlignment="Top" Width="143" Height="35"/>
        <Label x:Name="label3" Content="Authors" Canvas.Left="242" Canvas.Top="208" HorizontalAlignment="Left" VerticalAlignment="Top" Width="94"/>
        <ListBox x:Name="listBox"
                 SelectionMode="Multiple"
                 Height="82" Width="149" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Top="232" Canvas.Left="245" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="label3_Copy" Content="Ganres" Canvas.Left="409" Canvas.Top="209" Width="94" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ListBox x:Name="listBox_Copy"
            SelectionMode="Multiple"
            Height="83" Width="153" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Top="233" Canvas.Left="411" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="button_Copy" Content="Add Book" Canvas.Left="246" Canvas.Top="341" Width="152" Height="36" HorizontalAlignment="Left" VerticalAlignment="Top" Click="button_Copy_Click"/>
        <TextBox x:Name="textBox" Canvas.Left="236" TextWrapping="Wrap" Text="TextBox" Canvas.Top="49" Width="332" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Copy" 
                 
                  AcceptsReturn="True" 
                 Canvas.Left="238"
                 TextWrapping="Wrap" Text="TextBox" Canvas.Top="117" Width="334" HorizontalAlignment="Left" VerticalAlignment="Top" Height="68"/>
        <Button x:Name="button_Copy1" Content="Close" Canvas.Left="412" Canvas.Top="340" Width="152" Height="36" Click="button_Copy_Click" HorizontalAlignment="Left" VerticalAlignment="Top"/>

    </Canvas>
</Window>
