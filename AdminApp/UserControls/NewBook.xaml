<Window x:Class="AdminApp.NewBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminApp"
        mc:Ignorable="d"
            Title="NewBook" Height="433" Width="615">
    <Window.Resources>
        <FontFamily x:Key="SpecialElite">/Font/#Special Elite</FontFamily>
        <Style TargetType="{x:Type Button}" x:Key="ImageButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <BooleanToVisibilityConverter x:Key="boolToVisibility"></BooleanToVisibilityConverter>
    </Window.Resources>
    <Canvas>
        <Label x:Name="label"
               Content="Book Name" 
               Canvas.Left="231"
               Canvas.Top="25"
               FontFamily="{StaticResource SpecialElite}"/>
        <Label x:Name="label1"
               Content="BookDescription"
               Canvas.Left="234"
               Canvas.Top="98" 
               Width="112" 
               FontFamily="{StaticResource SpecialElite}"
               />
        <Label x:Name="label2" 
               FontFamily="{StaticResource SpecialElite}"
               Content="BookImage" 
               Canvas.Left="45" 
               Canvas.Top="28"/>
        <Border Canvas.Left="48" Canvas.Top="52"
                BorderThickness="1" BorderBrush="Black">
            <Image x:Name="imageBook"
                   Height="153"
                   Width="145"
                   Stretch="Fill"
                   Source="/Images/bookplace.png"/>
        </Border>
        <Button x:Name="buttonSelectImage"
                Canvas.Left="47" 
                Canvas.Top="220"
                   Width="150" 
                    Height="37"
                    FontSize="20"
                    FontFamily="{StaticResource SpecialElite}"
                    Foreground="White"
                    Background="Navy" 
                Click="buttonSelectImage_Click">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Width="32" Source="/Images/image.png"></Image>
                    <Label Foreground="White"
               Padding="10,10,0,0"
               Content="Book Image"
               FontSize="16"></Label>
                </StackPanel>
            </Button.Content>
        </Button>
        <Label FontFamily="{StaticResource SpecialElite}"
               Content="Authors" 
               Canvas.Left="246"
               Canvas.Top="203" 
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Width="94"/>
        <ListBox x:Name="listBoxAuthors"
                  Padding="7"
                 SelectionMode="Multiple"
                 Height="82"
                 Width="149" 
                 Canvas.Top="221"
                 Canvas.Left="249" 
                 >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock  FontFamily="{StaticResource SpecialElite}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} {1}">
                                <Binding Path="AuthorFirstName" />
                                <Binding Path="AuthorLastName" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label  Content="Ganres"
                Canvas.Left="413"
                Canvas.Top="204" 
                Width="94" 
                FontFamily="{StaticResource SpecialElite}" HorizontalAlignment="Left" VerticalAlignment="Center"
                />
        <ListBox x:Name="listBoxGenres"
                  Padding="7"
            SelectionMode="Multiple"
            Height="83"
            Width="153"
            Canvas.Top="222" 
            Canvas.Left="415" HorizontalAlignment="Left" VerticalAlignment="Center"
            >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding GanreName}" FontFamily="{StaticResource SpecialElite}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="buttonAddBook"
                Canvas.Left="250"
                Canvas.Top="330"
                    Width="150" 
                    Height="37"
                    FontSize="20"
                    FontFamily="{StaticResource SpecialElite}"
                    Foreground="White"
                    Background="Navy" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Width="32" Source="/Images/Add.png"></Image>
                    <Label Foreground="White"
               Padding="15,10,0,0"
               Content="Add Book"
               FontSize="16"></Label>
                </StackPanel>
            </Button.Content>
        </Button>
        <TextBox x:Name="textBoxBookName"
                 Canvas.Left="236" 
                 TextWrapping="Wrap" 
                 Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                 Canvas.Top="49"
                 Padding="7"
                 Width="332"
                 />
        <TextBox x:Name="textBoxBookDescription" 
                 Padding="7"
                 AcceptsReturn="True" 
                 Canvas.Left="238"
                 TextWrapping="Wrap"
                 Canvas.Top="117"
                 Width="334"
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Top"
                 Height="68"/>
        <Button x:Name="buttonClose" 
                Canvas.Left="416"
                Canvas.Top="329"
                Width="150" 
                Height="37"
                FontSize="20"
                FontFamily="{StaticResource SpecialElite}"
                Foreground="White"
                Background="Navy">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Width="32" 
                           Source="/Images/close.png"></Image>
                    <Label Foreground="White"
               Padding="15,10,0,0"
               Content="Close"
               FontSize="16"></Label>
                </StackPanel>
            </Button.Content>
        </Button>
        <TextBlock 
                   Canvas.Left="310" 
                   TextWrapping="Wrap"
                   Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textBoxBookName}"
                   Canvas.Top="26"
                   Visibility="{Binding (Validation.HasError),
                                Converter={StaticResource boolToVisibility},
                                ElementName=NameBox}"
                   Width="257" 
            />
        <TextBlock 
            Canvas.Left="334" 
            TextWrapping="Wrap"
            Text="" 
            Canvas.Top="97"
            Width="238" />
        <TextBlock 
            Canvas.Left="300" 
            TextWrapping="Wrap"
            Text="" 
            Canvas.Top="203"
            Width="99" />
        <TextBlock 
            Canvas.Left="460" 
            TextWrapping="Wrap"
            Text="" 
            Canvas.Top="203"
            Width="107" />
    </Canvas>
</Window>
